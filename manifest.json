{
  "manifest_version": 3,
  "name": "AI Email Generator",
  "description": "Generates an AI email for yo in an instant",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8080/*", "*://mail.google.com/*"],
  "action": {
    "default_title": "AI Email Generator"
  },
  "icons": {},
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css":["content.css"],
      "run_at":"document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ ],
      "matches": [ "*://mail.google.com/*" ]
    }
  ]
}
